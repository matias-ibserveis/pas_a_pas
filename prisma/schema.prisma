// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())  
  name     String
  email    String       @unique 
  password String    
  products Product[]

}

model Product {
  id       String    @id  @default(uuid())
  createdAt DateTime @default(now())
  ref      String    @unique  
  name     String
  description    String 
  categoria String
  price    Float
  photo    String
  userEmail   String   
  user      User     @relation(fields: [userEmail], references: [email])
}


