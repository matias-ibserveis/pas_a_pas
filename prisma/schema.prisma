// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(uuid())  
  name     String
  email    String       @unique 
  password String    
  products Product[]

}

model Product {
  id       String    @id  @default(uuid())
  createdAt DateTime @default(now())
  ref      String    @unique  
  name     String
  description    String 
  status   String   
  categoria String
  price    Float
  price2   Float
  pricetext    String  
  enlace   String
  photo    String
  photo2   String
  photo3   String
  photo4   String
  userEmail   String   
  user      User     @relation(fields: [userEmail], references: [email])
}




